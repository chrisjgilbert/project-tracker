<section>
  <div class="flex flex-col gap-6">
  <h1 class="text-2xl font-semibold">Projects</h1>
    <div>
      <%= link_to "New project", new_project_path, class: "text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" %>
    </div>
    <ul>
      <% @projects.each do |project| %>
        <li><%= link_to project.name, project, class: "mb-6 font-medium text-blue-600 dark:text-blue-500 hover:underline" %></li>
      <% end %>
    </ul>
  </div>
</section>
